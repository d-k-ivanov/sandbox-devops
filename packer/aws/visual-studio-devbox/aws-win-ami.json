{
    "variables": {
        "build_instance_size": "m5.xlarge",
        "region_build" : "eu-west-1",
        "regions_to_distribute" : "eu-west-1",
        "root_volume_size": "100",
        "version": "1.0.0",
        "vpc_id": "vpc-00000000000000000",
        "subnet": "subnet-00000000000000000"
    },
    "builders": [
        {
            "ami_description" : "Visual Studio DevBox v{{user `version`}}",
            "ami_name": "Visual-Studio-DevBox-v{{user `version`}}",
            "ami_regions": "{{user `regions_to_distribute`}}",
            "associate_public_ip_address": false,
            "communicator": "winrm",
            "ebs_optimized": true,
            "force_deregister": true,
            "instance_type": "{{user `build_instance_size`}}",
            "launch_block_device_mappings": [{
                "device_name": "/dev/sda1",
                "volume_type": "gp2",
                "volume_size": "{{user `root_volume_size`}}",
                "delete_on_termination": true
            }],
            "name": "aws-builder",
            "no_ephemeral": true,
            "region": "{{user `region_build`}}",
            "shutdown_behavior": "terminate",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "Windows_Server-2019-English-Full-Container*",
                    "root-device-type": "ebs"
                },
                "owners": ["amazon"],
                "most_recent": true
            },
            "subnet_id": "{{user `subnet`}}",
            "tags": {
                "Name": "Visual-Studio-DevBox-v{{user `version`}}",
                "Project": "Project",
                "Environment": "Dev",
                "OS_Family": "Windows",
                "Version": "{{user `version`}}"
            },
            "type": "amazon-ebs",
            "user_data_file": "{{template_dir}}/scripts/userdata.ps1",
            "vpc_id": "{{user `vpc_id`}}",
            "windows_password_timeout": "5m",
            "winrm_username": "Administrator"
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "scripts": [
                "{{template_dir}}/scripts/environment.ps1"
            ]
        },
        {
            "type": "windows-restart",
            "restart_timeout": "15m"
        },
        {
            "type": "file",
            "source": "{{template_dir}}/home/",
            "destination": "C:\\Users\\Administrator\\",
            "direction": "upload"
        },
        {
            "type": "powershell",
            "scripts": [
                "{{template_dir}}/scripts/base-packages.ps1"
            ]
        },
        {
            "type": "powershell",
            "scripts": [
                "{{template_dir}}/scripts/visual-studio.ps1"
            ]
        },
        {
            "type": "file",
            "source": "{{template_dir}}/tools/",
            "destination": "C:\\tools\\",
            "direction": "upload"
        },
        {
            "type": "windows-restart",
            "restart_timeout": "15m"
        },
        {
            "type": "powershell",
            "scripts": [
                "{{template_dir}}/scripts/thirdparty.ps1"
            ]
        },
        {
            "type": "powershell",
            "scripts": [
                "{{template_dir}}/scripts/post-install.ps1"
            ]
        },
        {
            "type": "windows-restart",
            "restart_timeout": "15m"
        },
        {
            "type": "powershell","inline": [
                "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SendWindowsIsReady.ps1 -Schedule",
                "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\InitializeInstance.ps1 -Schedule",
                "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SendEventLogs.ps1 -Schedule",
                "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SysprepInstance.ps1 -NoShutdown"
            ]
        }
    ]
}
